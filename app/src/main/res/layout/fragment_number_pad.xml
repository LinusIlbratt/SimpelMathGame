<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/numDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/display_bg"
        android:fontFamily="@font/bubblegum_sans"
        android:gravity="center"
        android:padding="8dp"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="4"
    android:columnCount="3">

    <Button
        android:id="@+id/num7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_margin="5dp"
        android:background="@drawable/btn_numpad_bg"
        android:elevation="40dp"
        android:fontFamily="@font/bubblegum_sans"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="7"
        android:textColor="#E6EAF1"
        android:textSize="34sp" />

    <Button
        android:id="@+id/num8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_margin="5dp"
        android:background="@drawable/btn_numpad_bg"
        android:fontFamily="@font/bubblegum_sans"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="8"
        android:textColor="#E6EAF1"
        android:textSize="34sp" />

    <Button
        android:id="@+id/num9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_margin="5dp"
        android:background="@drawable/btn_numpad_bg"
        android:fontFamily="@font/bubblegum_sans"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="9"
        android:textColor="#E6EAF1"
        android:textSize="34sp" />

    <Button
        android:id="@+id/num4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_margin="5dp"
        android:background="@drawable/btn_numpad_bg"
        android:fontFamily="@font/bubblegum_sans"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="4"
        android:textColor="#E6EAF1"
        android:textSize="34sp" />

    <Button
        android:id="@+id/num5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_margin="5dp"
        android:background="@drawable/btn_numpad_bg"
        android:fontFamily="@font/bubblegum_sans"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="5"
        android:textColor="#E6EAF1"
        android:textSize="34sp" />

    <Button
        android:id="@+id/num6"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_margin="5dp"
        android:background="@drawable/btn_numpad_bg"
        android:fontFamily="@font/bubblegum_sans"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="6"
        android:textColor="#E6EAF1"
        android:textSize="34sp" />

    <Button
        android:id="@+id/num1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_margin="5dp"
        android:background="@drawable/btn_numpad_bg"
        android:fontFamily="@font/bubblegum_sans"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="1"
        android:textColor="#E6EAF1"
        android:textSize="34sp" />

    <Button
        android:id="@+id/num2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_margin="5dp"
        android:background="@drawable/btn_numpad_bg"
        android:fontFamily="@font/bubblegum_sans"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="2"
        android:textColor="#E6EAF1"
        android:textSize="34sp" />

    <Button
        android:id="@+id/num3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_margin="5dp"
        android:background="@drawable/btn_numpad_bg"
        android:fontFamily="@font/bubblegum_sans"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="3"
        android:textColor="#E6EAF1"
        android:textSize="34sp" />

    <Button
        android:id="@+id/numDel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/btn_numpad_bg"
        android:fontFamily="@font/bubblegum_sans"
        android:letterSpacing="0.1"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="Del"
        android:textAllCaps="false"
        android:textColor="#800020"
        android:textSize="24sp" />

    <Button
        android:id="@+id/num0"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_margin="5dp"
        android:background="@drawable/btn_numpad_bg"
        android:fontFamily="@font/bubblegum_sans"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="0"
        android:textColor="#E6EAF1"
        android:textSize="34sp" />

    <Button
        android:id="@+id/numSubmit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/btn_numpad_bg"
        android:fontFamily="@font/bubblegum_sans"
        android:letterSpacing="0.2"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="Answer"
        android:textAllCaps="false"
        android:textColor="#800020"
        android:textSize="18sp" />

    </GridLayout>
</LinearLayout>